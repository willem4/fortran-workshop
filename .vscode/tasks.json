{
    // Copied from https://github.com/fortran-lang/vscode-fortran-support/issues/1165
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Fortitude Check",
            "type": "shell",
            "command": "./venv/Scripts/fortitude",
            "args": [
                "check",
                "${fileDirname}"
            ],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": {
                "owner": "Fortitude",
                "fileLocation": "relative",
                "source": "Fortitude",
                "pattern": {
                    "regexp": "^(.*?):(\\d+):(\\d+):\\s(\\w+)\\s(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "code": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            }
        },
        {
            "label": "fprettify",
            "type": "shell",
            "command": "./venv/Scripts/fprettify",
            "args": [
                "-c",
                "${workspaceFolder}/.fprettify.rc",
                "${file}"
            ],
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            }
        }
    ]
}
